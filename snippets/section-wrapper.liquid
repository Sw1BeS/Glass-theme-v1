{%- comment -%}
  Universal Section Wrapper for IS Beauty Lux
  Provides consistent structure, spacing, and theme integration for all sections
{%- endcomment -%}

{%- liquid
  assign section_id = section.id | default: 'section-' | append: section.type
  assign section_class = 'section-wrapper'

  if section.settings.section_class != blank
    assign section_class = section_class | append: ' ' | append: section.settings.section_class
  endif

  if section.settings.color_scheme != blank
    assign section_class = section_class | append: ' color-scheme-' | append: section.settings.color_scheme
  endif

  if section.settings.full_width
    assign section_class = section_class | append: ' full-width'
  endif

  if section.settings.no_padding
    assign section_class = section_class | append: ' no-padding'
  endif
-%}

<div class="{{ section_class }}"
     id="{{ section_id }}"
     style="{% render 'spacing-style', settings: section.settings %}">

  {%- if section.settings.show_background -%}
    <div class="section-background">
      <div class="background-particles"></div>
      <div class="background-orbs">
        <div class="orb orb-1"></div>
        <div class="orb orb-2"></div>
        <div class="orb orb-3"></div>
      </div>
    </div>
  {%- endif -%}

  <div class="section-container">
    {%- if section.settings.title != blank or section.settings.subtitle != blank -%}
      <div class="section-header">
        {%- if section.settings.title != blank -%}
          <h2 class="section-title">{{ section.settings.title }}</h2>
        {%- endif -%}
        {%- if section.settings.subtitle != blank -%}
          <p class="section-subtitle">{{ section.settings.subtitle }}</p>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class="section-content">
      {{ content }}
    </div>
  </div>
</div>

<style>
  .section-wrapper {
    position: relative;
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0.1) 0%,
      rgba(255, 255, 255, 0.05) 100%
    );
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 24px;
    padding: 2rem 1.5rem;
    margin: 1rem 0;
    overflow: hidden;
  }

  .section-wrapper.full-width {
    border-radius: 0;
    margin: 0;
  }

  .section-wrapper.no-padding {
    padding: 0;
  }

  .section-background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1;
    pointer-events: none;
  }

  .background-particles {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 20% 80%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
                radial-gradient(circle at 80% 20%, rgba(255, 255, 255, 0.1) 0%, transparent 50%);
    animation: floatParticles 20s ease-in-out infinite;
  }

  .background-orbs {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
  }

  .orb {
    position: absolute;
    border-radius: 50%;
    background: linear-gradient(45deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.05));
    animation: orbFloat 15s ease-in-out infinite;
  }

  .orb-1 {
    width: 100px;
    height: 100px;
    top: 10%;
    left: 10%;
    animation-delay: 0s;
  }

  .orb-2 {
    width: 150px;
    height: 150px;
    top: 60%;
    right: 10%;
    animation-delay: -5s;
  }

  .orb-3 {
    width: 80px;
    height: 80px;
    bottom: 20%;
    left: 50%;
    animation-delay: -10s;
  }

  .section-container {
    position: relative;
    z-index: 10;
  }

  .section-header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .section-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: var(--color-foreground);
    position: relative;
  }

  .section-title::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 3px;
    background: linear-gradient(90deg, var(--color-primary), var(--color-accent));
    border-radius: 2px;
    animation: glowPulse 2s ease-in-out infinite alternate;
  }

  .section-subtitle {
    font-size: 1.1rem;
    color: var(--color-foreground-muted);
    max-width: 600px;
    margin: 0 auto;
  }

  .section-content {
    position: relative;
    z-index: 10;
  }

  @keyframes floatParticles {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    50% { transform: translateY(-20px) rotate(180deg); }
  }

  @keyframes orbFloat {
    0%, 100% { transform: translateY(0px) scale(1); opacity: 0.3; }
    50% { transform: translateY(-30px) scale(1.1); opacity: 0.6; }
  }

  @keyframes glowPulse {
    0% { box-shadow: 0 0 5px var(--color-primary); }
    100% { box-shadow: 0 0 20px var(--color-primary), 0 0 30px var(--color-primary); }
  }

  @media (max-width: 768px) {
    .section-wrapper {
      padding: 1rem 0.5rem;
      margin: 0.5rem 0;
    }

    .section-title {
      font-size: 2rem;
    }

    .section-subtitle {
      font-size: 1rem;
    }

    .orb {
      display: none;
    }
  }
</style>
