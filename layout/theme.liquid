<!doctype html>
<html
  class="no-js{% if request.design_mode %} shopify-design-mode{% endif %}"
  lang="{{ request.locale.iso_code }}"
>
  <head>
    <!-- Critical CSS inline for above-the-fold content -->
    <style>
      {% render 'critical-css' %}
    </style>

    {%- render 'stylesheets' -%}

    {%- if settings.favicon != blank -%}
      <link
        rel="icon"
        type="image/png"
        href="{{ settings.favicon | image_url: width: 32, height: 32 }}"
      >
    {%- endif -%}

    {% comment %} This a way to wait for main content to load when navigating to a new page so that the view transitions can work consistently {% endcomment %}
    <link
      rel="expect"
      href="#MainContent"
      blocking="render"
      id="view-transition-render-blocker"
    >

    {%- render 'meta-tags' -%}
    {%- render 'fonts' -%}
    {%- render 'scripts' -%}
    {%- render 'theme-styles-variables' -%}
    {%- render 'color-schemes' -%}

    <!-- Custom IS Beauty Lux Styles -->
    <link rel="stylesheet" href="{{ 'css-variables.css' | asset_url }}">
    <link rel="stylesheet" href="{{ 'glass-effect.css' | asset_url }}">
    <link rel="stylesheet" href="{{ 'custom-styles.css' | asset_url }}">

    {% if request.design_mode %}
      {%- render 'theme-editor' -%}
    {% endif %}

    {{ content_for_header }}
  </head>

  {% capture body_classes %}
    page-width-{{ settings.page_width }} card-hover-effect-{{ settings.card_hover_effect }}{% if settings.enable_glass_effect %} theme-glass{% endif %}{% if settings.enable_theme_background_effects %} theme-background-effects{% endif %}
  {% endcapture %}

  {% capture body_style %}
    --glass-global-blur: {{ settings.glass_blur_strength | default: 20 }}px;
    --glass-global-opacity: {{ settings.glass_surface_opacity | default: 28 | divided_by: 100.0 }};
    --glass-global-border-opacity: {{ settings.glass_surface_border_opacity | default: 24 | divided_by: 100.0 }};
    --glass-opacity-strength: {{ settings.glass_surface_opacity | default: 28 }}%;
    --glass-border-strength: {{ settings.glass_surface_border_opacity | default: 24 }}%;
    --glass-global-tint: {{ settings.glass_surface_tint | default: '#FFFFFFCC' }};
  {% endcapture %}

  <body
    class="{{ body_classes | strip }}"
    data-glass-enabled="{{ settings.enable_glass_effect }}"
    data-theme-background-effects="{{ settings.enable_theme_background_effects }}"
    style="{{ body_style | strip }}"
  >
    {% render 'skip-to-content-link', href: '#MainContent', text: 'accessibility.skip_to_text' %}
    <div id="header-group">
      {% section 'header' %}
    </div>

    <script
      src="{{ 'critical.js' | asset_url }}"
      type="module"
      async
      blocking="render"
    ></script>

    <main
      id="MainContent"
      class="content-for-layout"
      role="main"
      data-page-transition-enabled="{{ settings.page_transition_enabled }}"
      data-product-transition="{{ settings.transition_to_main_product }}"
      data-template="{{ template }}"
      aria-label="Main content"
    >
      {{ content_for_layout }}
    </main>

    {% sections 'footer-group' %}

    {% render 'search-modal' %}

    {% if settings.quick_add or settings.mobile_quick_add %}
      {% render 'quick-add-modal' %}
    {% endif %}

    <!-- Theme Switcher Script -->
    <script src="{{ 'theme-switcher.js' | asset_url }}" defer></script>
    <script src="{{ 'animated-background.js' | asset_url }}" defer></script>
    <!-- Adaptive Tooltips Script -->
    <script src="{{ 'adaptive-tooltips.js' | asset_url }}" defer></script>
    <!-- Theme Toggle Script -->
    <script src="{{ 'theme-toggle.js' | asset_url }}" defer></script>
  </body>
</html>
