{% comment %}
  Simple Header: Header IS the glass, content sits on top
  Layer structure: Background -> Orbs -> Glass (header) -> Content
{% endcomment %}

{% liquid
  assign logo_width = section.settings.logo_width | default: '120px'
  assign logo_width_mobile = section.settings.logo_width_mobile | default: '100px'
  assign logo_height = section.settings.logo_height | default: '40px'
  assign logo_height_mobile = section.settings.logo_height_mobile | default: '35px'
  assign menu_items = section.settings.menu.links
  assign show_search = section.settings.show_search
  assign show_cart = section.settings.show_cart
  assign show_account = section.settings.show_account
  assign sticky_behavior = section.settings.enable_sticky_header | default: 'always'

  assign glass_enabled = section.settings.enable_glass
  if glass_enabled == null
    assign glass_enabled = settings.enable_glass_effect
  endif
  assign glass_tone = section.settings.glass_tone | default: 'auto'
  assign glass_elevation = section.settings.glass_elevation | default: 'medium'

  assign glass_blur_preset = section.settings.glass_blur_preset | default: 'global'
  assign glass_blur_custom = section.settings.glass_blur_custom | default: 20
  assign glass_blur = null
  case glass_blur_preset
    when 'soft'
      assign glass_blur = 14
    when 'balanced'
      assign glass_blur = 20
    when 'bold'
      assign glass_blur = 28
    when 'custom'
      assign glass_blur = glass_blur_custom
  endcase

  assign glass_opacity = section.settings.glass_opacity | default: 82
  assign glass_border_opacity = section.settings.glass_border_opacity | default: 35
  assign glass_tint = section.settings.glass_tint | default: 18
  assign shadow_strength = section.settings.shadow_strength | default: 38
  assign tint_inverse = 100 | minus: glass_tint
  assign padding_inline = section.settings.padding_inline | default: 28
  assign padding_block = section.settings.padding_block | default: 16
  assign corner_radius = section.settings.corner_radius | default: 32
  assign content_gap = section.settings.content_gap | default: 18
  assign content_alignment = section.settings.content_alignment | default: 'space-between'

  # Mobile settings
  assign padding_inline_mobile = section.settings.padding_inline_mobile | default: 20
  assign padding_block_mobile = section.settings.padding_block_mobile | default: 12
  assign corner_radius_mobile = section.settings.corner_radius_mobile | default: 24
  assign content_gap_mobile = section.settings.content_gap_mobile | default: 14

  # Animation settings
  assign enable_header_animation = section.settings.enable_header_animation | default: true
  assign header_animation_duration = section.settings.header_animation_duration | default: 300

  # Apply animation duration to CSS
  if enable_header_animation
    assign animation_duration_css = header_animation_duration | append: 'ms'
  else
    assign animation_duration_css = '0ms'
  endif

  assign header_height_raw = section.settings.header_height | default: '60px'
  assign header_width_raw = section.settings.header_width | default: '1200px'

  assign header_height_value = header_height_raw | strip
  if header_height_value == ''
    assign header_height_value = '60px'
  endif
  assign header_height_lower = header_height_value | downcase
  if header_height_lower contains 'px' or header_height_lower contains 'rem' or header_height_lower contains 'em' or header_height_lower contains 'vh' or header_height_lower contains 'vw' or header_height_lower contains '%' or header_height_lower contains 'ch' or header_height_lower contains 'calc' or header_height_lower contains 'auto'
    assign header_height_css = header_height_value
  else
    assign header_height_css = header_height_value | append: 'px'
  endif

  assign header_width_value = header_width_raw | strip
  if header_width_value == ''
    assign header_width_value = '1200px'
  endif
  assign header_width_lower = header_width_value | downcase
  if header_width_lower contains 'px' or header_width_lower contains 'rem' or header_width_lower contains 'em' or header_width_lower contains 'vh' or header_width_lower contains 'vw' or header_width_lower contains '%' or header_width_lower contains 'ch' or header_width_lower contains 'calc' or header_width_lower contains 'auto'
    assign header_width_css = header_width_value
  else
    assign header_width_css = header_width_value | append: 'px'
  endif
%}

{% capture header_style %}
  {% if glass_blur != blank %}
    --glass-local-blur: {{ glass_blur }}px;
  {% endif %}
  --header-glass-opacity: {{ glass_opacity }}%;
  --header-border-opacity: {{ glass_border_opacity }}%;
  --header-tint-strength: {{ glass_tint }}%;
  --header-shadow-strength: {{ shadow_strength }}%;
  --header-spacing-inline: {{ padding_inline }}px;
  --header-spacing-block: {{ padding_block }}px;
  --header-radius: {{ corner_radius }}px;
  --header-gap: {{ content_gap }}px;
  --header-justify: {{ content_alignment }};
  --header-spacing-inline-mobile: {{ padding_inline_mobile }}px;
  --header-spacing-block-mobile: {{ padding_block_mobile }}px;
  --header-radius-mobile: {{ corner_radius_mobile }}px;
  --header-gap-mobile: {{ content_gap_mobile }}px;
  --header-animation-duration: {{ animation_duration_css }};
  --header-surface-color: color-mix(in srgb, var(--glass-surface-color, rgba(255, 255, 255, 0.82)) {{ glass_opacity }}%, transparent);
  --header-surface-color: color-mix(in srgb, var(--header-surface-color) {{ tint_inverse }}%, var(--glass-highlight-color, var(--color-primary, #bf8a7a)) {{ glass_tint }}%);
  --header-border-color: color-mix(in srgb, var(--glass-surface-border-color, rgba(255, 255, 255, 0.4)) {{ glass_border_opacity }}%, transparent);
  --header-shadow-color: color-mix(in srgb, var(--glass-shadow-color, rgba(17, 23, 34, 0.2)) {{ shadow_strength }}%, transparent);
{% endcapture %}
{% assign header_style_trimmed = header_style | strip %}

<header
  class="header{% if glass_enabled %} glass{% endif %}"
  data-sticky="{{ sticky_behavior }}"
  {% if glass_enabled %}
    data-glass-tone="{{ glass_tone }}"
    data-glass-elevation="{{ glass_elevation }}"
  {% endif %}
  {% unless header_style_trimmed == '' %}
    style="{{ header_style_trimmed }}"
  {% endunless %}
