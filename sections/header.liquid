    --header-logo-width: {{ logo_width }};
    --header-logo-width-mobile: {{ logo_width_mobile }};
    --header-logo-height: {{ logo_height }};
    --header-logo-height-mobile: {{ logo_height_mobile }};
    --header-height: {{ header_height_css }};
    --header-width: {{ header_width_css }};
  }

  #shopify-section-{{ section.id }} .header {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: var(--header-justify, space-between);
    flex-wrap: wrap;
    gap: var(--header-gap, clamp(0.75rem, 3vw, 1.6rem));
    width: min(100%, var(--header-width, 1200px));
    min-height: var(--header-height, 60px);
    margin: clamp(0.6rem, 2.2vw, 1.5rem) auto;
    padding: var(--header-spacing-block, clamp(0.65rem, 2vw, 1rem)) var(--header-spacing-inline, clamp(1rem, 3vw, 2rem));
    border-radius: var(--header-radius, clamp(1.8rem, 4vw, 3.2rem));
    box-sizing: border-box;
    z-index: 20;
    background: var(--header-surface-color, color-mix(in srgb, var(--glass-surface-color, rgba(255, 255, 255, 0.82)) var(--header-glass-opacity, 82%), transparent));
    border: 1px solid var(--header-border-color, color-mix(in srgb, var(--glass-surface-border-color, rgba(255, 255, 255, 0.4)) 35%, transparent));
    box-shadow: 0 18px 42px var(--header-shadow-color, color-mix(in srgb, var(--glass-shadow-color, rgba(17, 23, 34, 0.2)) 35%, transparent));
  }

  #shopify-section-{{ section.id }} .header > * {
    flex-shrink: 0;
  }

  #shopify-section-{{ section.id }} .logo-link {
    display: inline-flex;
    align-items: center;
    gap: 0.6rem;
    text-decoration: none;
    color: var(--color-foreground, #2c2c2c);
    transition: transform 0.25s ease;
    min-width: 0;
  }

  #shopify-section-{{ section.id }} .logo-link:hover {
    transform: translateY(-2px);
  }

  #shopify-section-{{ section.id }} .logo-image {
    width: var(--header-logo-width) !important;
    height: var(--header-logo-height) !important;
    max-width: 100% !important;
    max-height: none !important;
    object-fit: contain !important;
  }

  #shopify-section-{{ section.id }} .logo-text {
    font-size: clamp(1.35rem, 2.6vw, 1.65rem);
    font-weight: 700;
    color: var(--color-foreground, #2c2c2c);
  }

  #shopify-section-{{ section.id }} .menu-group {
    flex: 1 1 auto;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: clamp(0.75rem, 2.5vw, 1.65rem);
    min-width: min(320px, 100%);
  }

  #shopify-section-{{ section.id }} .menu-link {
    color: var(--color-foreground, #2c2c2c);
    text-decoration: none;
    font-weight: 600;
    padding: 0.55rem 0.9rem;
    border-radius: 999px;
    transition: transform 0.2s ease, box-shadow 0.2s ease, background 0.2s ease;
    white-space: nowrap;
  }

  #shopify-section-{{ section.id }} .menu-link:hover,
  #shopify-section-{{ section.id }} .menu-link:focus-visible {
    background: color-mix(in srgb, var(--glass-surface-color, rgba(255, 255, 255, 0.8)) 70%, transparent);
    box-shadow: 0 12px 26px rgba(20, 26, 34, 0.12);
    transform: translateY(-2px);
  }

  #shopify-section-{{ section.id }} .header-right {
    display: inline-flex;
    align-items: center;
    gap: 0.55rem;
    margin-left: auto;
    flex-shrink: 0;
    flex-wrap: nowrap;
  }

  #shopify-section-{{ section.id }} .action-group {
    display: inline-flex;
    align-items: center;
    gap: 0.45rem;
  }

  #shopify-section-{{ section.id }} .action-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 999px;
    border: none;
    background: transparent;
    color: var(--color-foreground, #2c2c2c);
    text-decoration: none;
    transition: transform 0.2s ease, box-shadow 0.2s ease, background 0.2s ease;
    position: relative;
    cursor: pointer;
  }

  #shopify-section-{{ section.id }} .action-btn:hover,
  #shopify-section-{{ section.id }} .action-btn:focus-visible {
    background: color-mix(in srgb, var(--glass-surface-color, rgba(255, 255, 255, 0.78)) 72%, transparent);
    transform: translateY(-2px);
    box-shadow: 0 12px 26px rgba(20, 26, 34, 0.12);
    outline: none;
  }

  #shopify-section-{{ section.id }} .cart-count {
    position: absolute;
    top: -4px;
    right: -4px;
    min-width: 18px;
    height: 18px;
    padding: 0 4px;
    border-radius: 999px;
    background: var(--color-primary, #bf8a7a);
    color: #fff;
    font-size: 0.7rem;
    font-weight: 600;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  #shopify-section-{{ section.id }} .mobile-toggle {
    background: var(--glass-surface-color, rgba(255, 255, 255, 0.1));
    border: 1px solid var(--glass-surface-border-color, rgba(255, 255, 255, 0.22));
    border-radius: 12px;
    width: 42px;
    height: 42px;
    font-size: 1.1rem;
    color: var(--glass-foreground-strong, var(--color-foreground, #2c2c2c));
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  #shopify-section-{{ section.id }} .mobile-toggle:hover,
  #shopify-section-{{ section.id }} .mobile-toggle:focus-visible {
    background: color-mix(in srgb, var(--glass-surface-color, rgba(255, 255, 255, 0.8)) 80%, transparent);
  }

  #shopify-section-{{ section.id }} .mobile-menu {
    position: absolute;
    left: 0;
    right: 0;
    top: calc(100% + 0.5rem);
    display: none;
    flex-direction: column;
    gap: 0.35rem;
    background: var(--glass-surface-color, rgba(255, 255, 255, 0.85));
    border: 1px solid var(--glass-surface-border-color, rgba(255, 255, 255, 0.35));
    border-radius: 18px;
    padding: 1rem;
    box-shadow: 0 24px 40px var(--glass-shadow-color, rgba(20, 26, 34, 0.16));
    opacity: 0;
    transform: translateY(-12px);
    pointer-events: none;
    max-height: 0;
    overflow: hidden;
    transition: opacity 0.25s ease, transform 0.25s ease, max-height 0.25s ease;
    z-index: 5;
  }

  #shopify-section-{{ section.id }} .mobile-menu.active {
    opacity: 1;
    transform: translateY(0);
    pointer-events: auto;
    max-height: 420px;
  }

  #shopify-section-{{ section.id }} .mobile-menu-link {
    display: block;
    padding: 0.75rem 1rem;
    border-radius: 12px;
    text-decoration: none;
    color: var(--glass-foreground-strong, var(--color-foreground, #2c2c2c));
    font-weight: 500;
    transition: background 0.2s ease, transform 0.2s ease;
  }

  #shopify-section-{{ section.id }} .mobile-menu-link:hover,
  #shopify-section-{{ section.id }} .mobile-menu-link:focus-visible {
    background: var(--glass-surface-color, rgba(255, 255, 255, 0.8));
    transform: translateX(4px);
  }

  #shopify-section-{{ section.id }} .mobile-menu-link:last-child {
    margin-bottom: 0;
  }

  #shopify-section-{{ section.id }} .mobile-only {
    display: none;
  }

  @media (max-width: 1023px) {
    #shopify-section-{{ section.id }} .mobile-menu {
      display: flex;
    }

    #shopify-section-{{ section.id }} .header {
      gap: var(--header-gap-mobile, clamp(0.6rem, 2vw, 1.1rem));
      padding: var(--header-spacing-block-mobile, clamp(0.5rem, 2vw, 0.75rem)) var(--header-spacing-inline-mobile, clamp(0.85rem, 4vw, 1.25rem));
      width: calc(100% - clamp(1rem, 4vw, 2.5rem));
      flex-wrap: nowrap;
      min-height: 60px;
    }

    #shopify-section-{{ section.id }} .menu-group.desktop-only {
      display: none !important;
    }

    #shopify-section-{{ section.id }} .mobile-only {
      display: inline-flex;
    }

    #shopify-section-{{ section.id }} .header-right {
      gap: 0.4rem;
      align-items: center;
    }
  }

  @media (max-width: 680px) {
    #shopify-section-{{ section.id }} .header {
      border-radius: var(--header-radius-mobile, clamp(1.2rem, 5vw, 2rem));
    }

    #shopify-section-{{ section.id }} .header-right {
      gap: 0.3rem;
    }

    #shopify-section-{{ section.id }} .logo-image {
      width: var(--header-logo-width-mobile) !important;
      height: var(--header-logo-height-mobile) !important;
    }

    #shopify-section-{{ section.id }} .logo-text {
      font-size: clamp(1.2rem, 5vw, 1.45rem);
    }

    #shopify-section-{{ section.id }} .action-btn,
    #shopify-section-{{ section.id }} .mobile-menu {
      right: 0;
      left: 0;
      width: 100%;
    }
  }

  #shopify-section-{{ section.id }} .header[data-sticky="always"],
  #shopify-section-{{ section.id }} .header[data-sticky="scroll-up"] {
    position: fixed;
    top: clamp(0.6rem, 2vw, 1.25rem);
    left: 50%;
    transform: translateX(-50%);
    width: min(100% - clamp(1rem, 4vw, 3rem), var(--header-width, 1200px));
    margin: 0;
  }

  #shopify-section-{{ section.id }} .header[data-sticky="scroll-up"] {
    transform: translate(-50%, -120%);
    transition: transform 0.35s ease;
  }

  #shopify-section-{{ section.id }} .header[data-sticky="scroll-up"].visible {
    transform: translate(-50%, 0);
  }

  #shopify-section-{{ section.id }} .header[data-sticky="never"] {
    position: relative;
    top: auto;
    left: auto;
    transform: none;
    width: min(100%, var(--header-width, 1200px));
  }

  @media (max-width: 1023px) {
    #shopify-section-{{ section.id }} .header[data-sticky="always"],
    #shopify-section-{{ section.id }} .header[data-sticky="scroll-up"] {
      width: calc(100% - clamp(1rem, 4vw, 2.25rem));
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const section = document.getElementById('shopify-section-{{ section.id }}');
    if (!section) {
      return;
    }

    const mobileToggle = section.querySelector('[data-mobile-toggle]');
    const mobileMenu = section.querySelector('[data-mobile-menu]');

    if (mobileToggle && mobileMenu) {
      const toggleMenu = function () {
        const isOpen = mobileMenu.classList.toggle('active');
        mobileToggle.classList.toggle('active', isOpen);
        mobileToggle.setAttribute('aria-expanded', isOpen ? 'true' : 'false');
      };

      mobileToggle.addEventListener('click', toggleMenu);

      mobileMenu.querySelectorAll('a').forEach(function (link) {
        link.addEventListener('click', function () {
          if (mobileMenu.classList.contains('active')) {
            toggleMenu();
          }
        });
      });
    }

    const stickyHeader = section.querySelector('.header[data-sticky="scroll-up"]');
    if (stickyHeader) {
      let lastScrollY = window.scrollY;
      const handleScroll = function () {
        const currentScrollY = window.scrollY;
        if (currentScrollY > lastScrollY && currentScrollY > 100) {
          stickyHeader.classList.remove('visible');
        } else {
          stickyHeader.classList.add('visible');
        }
        lastScrollY = currentScrollY;
      };

      handleScroll();
      window.addEventListener('scroll', handleScroll, { passive: true });
    }

    if (window.Shopify && window.Shopify.designMode) {
      document.addEventListener('shopify:section:load', function (event) {
        if (event.detail.sectionId !== '{{ section.id }}') {
          return;
        }
        const updatedSection = document.getElementById('shopify-section-{{ section.id }}');
        if (!updatedSection) {
          return;
        }
        const logoImage = updatedSection.querySelector('.logo-image');
        if (logoImage) {
          logoImage.style.height = 'var(--header-logo-height)';
        }
      });
    }
  });
</script>

