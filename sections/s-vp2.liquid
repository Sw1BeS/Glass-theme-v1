{% comment %}
  VP2 Section - Value Proposition 2
  Features: Image on one side, text content on the other, responsive layout
{% endcomment %}

{% liquid
  assign glass_enabled = section.settings.enable_glass
  if glass_enabled == null
    assign glass_enabled = settings.enable_glass_effect
  endif
  assign glass_tone = section.settings.glass_tone | default: 'auto'
  assign glass_elevation = section.settings.glass_elevation | default: 'medium'
%}

<div
  class="s-vp2 section color-scheme"
  data-theme="{{ section.settings.color_scheme }}"
  {% if glass_enabled %}
    data-glass-tone="{{ glass_tone }}"
    data-glass-elevation="{{ glass_elevation }}"
  {% endif %}
>
  <div class="s-vp2-container section-{{ section.settings.section_width }}">
    <div
      class="s-vp2-content glass"
    >
      {%- assign header_found = false -%}
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'section_header' -%}
            {%- assign header_found = true -%}
            <h2 class="title" {{ block.shopify_attributes }}>{{ block.settings.heading }}</h2>
          {%- when 'text' -%}
            <div class="description" {{ block.shopify_attributes }}>{{ block.settings.text }}</div>
          {%- when 'button' -%}
            {%- if block.settings.button_text != blank -%}
              <a href="{{ block.settings.button_link }}" class="button" {{ block.shopify_attributes }}>
                {{ block.settings.button_text }}
              </a>
            {%- endif -%}
        {%- endcase -%}
      {%- endfor -%}

      {%- unless header_found -%}
        <h2 class="title">{{ section.settings.heading | default: 'All-Day Hold That Lasts' }}</h2>
      {%- endunless -%}

      {%- assign text_found = false -%}
      {%- assign button_found = false -%}
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'text' -%}
            {%- assign text_found = true -%}
          {%- when 'button' -%}
            {%- assign button_found = true -%}
        {%- endcase -%}
      {%- endfor -%}

      {%- unless text_found -%}
        <div class="description">
          {{
            section.settings.text
            | default: '<p>Our advanced formula provides 24-hour hold without stiffness or flaking. Perfect for busy professionals who need their brows to look perfect from morning to night.</p>'
          }}
        </div>
      {%- endunless -%}

      {%- unless button_found -%}
        {%- if section.settings.button_text != blank -%}
          <a href="{{ section.settings.button_link }}" class="button">
            {{ section.settings.button_text }}
          </a>
        {%- endif -%}
      {%- endunless -%}
    </div>
    <div class="media">
      {%- if section.settings.image != blank -%}
        <div class="image-desktop">
          {{
            section.settings.image
            | image_url: width: 1500
            | image_tag:
              loading: 'lazy',
              sizes: '(min-width: 768px) 750px, 0px',
              widths: '750, 1000, 1500',
              class: 's-vp2-image',
              alt: section.settings.image.alt | default: 'Value proposition 2 image'
          }}
        </div>
        {%- if section.settings.image_mobile != blank -%}
          <div class="image-mobile">
            {{
              section.settings.image_mobile
              | image_url: width: 750
              | image_tag:
                loading: 'lazy',
                sizes: '(max-width: 767px) 375px, 0px',
                widths: '375, 500, 750',
                class: 'image',
                alt: section.settings.image_mobile.alt | default: 'Value proposition 2 image mobile'
            }}
          </div>
        {%- else -%}
          <div class="image-mobile">
            {{
              section.settings.image
              | image_url: width: 750
              | image_tag:
                loading: 'lazy',
                sizes: '(max-width: 767px) 375px, 0px',
                widths: '375, 500, 750',
                class: 'image',
                alt: section.settings.image.alt | default: 'Value proposition 2 image mobile'
            }}
          </div>
        {%- endif -%}
      {%- else -%}
        <div class="s-vp2-placeholder">
          <p>Add an image for VP2</p>
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

{% stylesheet %}
  .s-vp2 .section {
    padding: clamp(3rem, 6vw, 4.2rem) 0;
    background: transparent;
  }

  .s-vp2-container {
    max-width: 1180px;
    margin: 0 auto;
    padding: 0 clamp(1.5rem, 4vw, 2.5rem);
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: clamp(2.5rem, 5vw, 4rem);
    align-items: center;
  }

  @media (max-width: 767px) {
    .s-vp2-container {
      grid-template-columns: 1fr;
      gap: 2rem;
      padding: 0 0.5rem;
      margin: 0;
      max-width: 100%;
      width: 100%;
    }

    .s-vp2-content {
      order: 2;
      padding: 1rem;
      margin: 0;
    }

    .s-vp2 .image {
      order: 1;
      width: 100%;
      max-width: 100%;
    }

    .s-vp2 .image-wrapper,
    .s-vp2 .image-desktop,
    .s-vp2 .image-mobile {
      width: 100%;
      max-width: 100%;
      margin: 0;
    }
  }

  .s-vp2-content {
    display: grid;
    gap: clamp(1.2rem, 3vw, 1.8rem);
    padding: clamp(1.8rem, 3.5vw, 2.4rem);
    border-radius: 22px;
    color: var(--text-primary);
  }

  .s-vp2-content:not(.glass-surface) {
    background: color-mix(
      in srgb,
      var(--glass-surface-color, rgba(255, 255, 255, 0.1)) 85%,
      transparent
    );
    border: 1px solid var(--glass-surface-border-color, rgba(255, 255, 255, 0.2));
    box-shadow: 0 18px 40px var(--glass-shadow-color, rgba(0, 0, 0, 0.1));
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
  }

  .s-vp2-content.glass-surface {
    padding: clamp(1.8rem, 3.5vw, 2.4rem);
    border: none;
    box-shadow: none;
  }

  .s-vp2 .title {
    font-size: clamp(2rem, 4vw, 2.9rem);
    font-weight: 700;
    margin: 0;
    color: var(--text-primary);
  }

  .s-vp2 .description {
    font-size: 1.05rem;
    line-height: 1.65;
    color: var(--text-secondary);
  }

  .s-vp2 .button {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    padding: 0.9rem 2rem;
    border-radius: 999px;
    text-decoration: none;
    font-weight: 600;
    background: linear-gradient(
      135deg,
      var(--color-primary, #bf8a7a) 0%,
      color-mix(in srgb, var(--color-primary, #bf8a7a) 55%, transparent) 100%
    );
    color: var(--text-on-primary, #ffffff);
    border: 1px solid transparent;
    box-shadow: 0 20px 40px
      color-mix(in srgb, var(--color-primary, #bf8a7a) 25%, transparent);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .s-vp2 .button:hover {
    transform: translateY(-2px);
    box-shadow: 0 26px 52px
      color-mix(in srgb, var(--color-primary, #bf8a7a) 32%, transparent);
  }

  .s-vp2 .media {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .s-vp2 .image-wrapper,
  .s-vp2 .image-desktop,
  .s-vp2 .image-mobile {
    border-radius: 22px;
    overflow: hidden;
    box-shadow: 0 20px 46px rgba(20, 26, 34, 0.14);
  }

  .s-vp2 .image {
    width: 100%;
    display: block;
  }

  .s-vp2 .image-desktop {
    display: block;
  }

  .s-vp2 .image-mobile {
    display: none;
  }

  @media (max-width: 900px) {
    .s-vp2 .container {
      grid-template-columns: 1fr;
    }

    .s-vp2 .content,
    .s-vp2 .content.glass-surface {
      padding: clamp(1.5rem, 5vw, 1.9rem);
    }

    .s-vp2 .container {
      gap: clamp(2rem, 5vw, 3rem);
    }

    .s-vp2 .image-desktop {
      display: none;
    }

    .s-vp2 .image-mobile {
      display: block;
    }
  }
{% endstylesheet %}

