{%- comment -%}
  Clean Page Section for IS BEAUTY LUX
  Features: Glass effect, responsive design, theme integration
{%- endcomment -%}

<div class="section page-section">
  <div class="page__container">
    {% if page.title != blank %}
      <h1 class="page__title">{{ page.title }}</h1>
    {% endif %}

    {% if page.content != blank %}
      <div class="page__content">
        {{ page.content }}
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Page",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color Scheme",
      "options": [
        {
          "value": "brand-porcelain",
          "label": "Brand Porcelain"
        },
        {
          "value": "classic-rose",
          "label": "Classic Rose"
        },
        {
          "value": "deep-burgundy",
          "label": "Deep Burgundy"
        },
        {
          "value": "sage-green",
          "label": "Sage Green"
        },
        {
          "value": "midnight-blue",
          "label": "Midnight Blue"
        },
        {
          "value": "warm-terracotta",
          "label": "Warm Terracotta"
        }
      ],
      "default": "brand-porcelain"
    }
  ],
  "presets": [
    {
      "name": "Page"
    }
  ]
}
{% endschema %}
