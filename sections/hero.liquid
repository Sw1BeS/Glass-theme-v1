{% comment %}
  Hero Section - Main banner with glassmorphism design and dynamic theme switching
  Features: Full-screen background, glass effect content blocks, responsive design
  Follows Shopify OS 2.0 standards with block-based architecture
{% endcomment %}

{% liquid
  assign glass_enabled = section.settings.enable_glass
  if glass_enabled == null
    assign glass_enabled = settings.enable_glass_effect
  endif
  assign glass_tone = section.settings.glass_tone | default: 'auto'
  assign glass_elevation = section.settings.glass_elevation | default: 'medium'
%}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<div
  class="section section--{{ section.settings.section_width }} hero-section color-{{ section.settings.color_scheme }} spacing-style"
  {% if glass_enabled %}
    data-glass-tone="{{ glass_tone }}"
    data-glass-elevation="{{ glass_elevation }}"
  {% endif %}
>
  <!-- Background Image -->
  <div class="hero-background">
    {%- if section.settings.image_1 != blank -%}
      <!-- Desktop Image -->
      <div class="hero-image-desktop">
        {{
          section.settings.image_1
          | image_url: width: 1920
          | image_tag:
            loading: 'eager',
            sizes: '(min-width: 768px) 100vw, 0px',
            widths: '768, 1024, 1280, 1920',
            class: 'hero-bg-image'
        }}
      </div>
    {%- endif -%}

    {%- if section.settings.image_1_mobile != blank -%}
      <!-- Mobile Image -->
      <div class="hero-image-mobile">
        {{
          section.settings.image_1_mobile
          | image_url: width: 768
          | image_tag:
            loading: 'eager',
            sizes: '(max-width: 767px) 100vw, 0px',
            widths: '375, 414, 768',
            class: 'hero-bg-image'
        }}
      </div>
    {%- elsif section.settings.image_1 != blank -%}
      <!-- Fallback to desktop image for mobile -->
      <div class="hero-image-mobile">
        {{
          section.settings.image_1
          | image_url: width: 768
          | image_tag:
            loading: 'eager',
            sizes: '(max-width: 767px) 100vw, 0px',
            widths: '375, 414, 768',
            class: 'hero-bg-image'
        }}
      </div>
    {%- endif -%}
  </div>

  <!-- Content Overlay -->
  <div class="hero-content">
    <div class="hero-container hero-container--{{ section.settings.content_vertical }}">
      <div
        class="hero-text glass hero-text--{{ section.settings.content_alignment }}"
        style="
          max-width: {{ section.settings.content_max_width }}px;
          padding: {{ section.settings.glass_padding }}px;
          border-radius: {{ section.settings.glass_border_radius }}px;
          margin-top: {{ section.settings.content_margin_top }}px;
          margin-bottom: {{ section.settings.content_margin_bottom }}px;
        "
      >
        {%- assign button_blocks = section.blocks | where: 'type', 'button' -%}
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'text' -%}
              <div class="hero-text-block" {{ block.shopify_attributes }}>
                {{ block.settings.text }}
              </div>
          {%- endcase -%}
        {%- endfor -%}

        {%- if button_blocks.size > 0 -%}
          <div
            class="hero-button-block{% if section.settings.equal_button_width %} equal-width{% endif %}"
            style="gap: {{ section.settings.button_gap }}px;"
          >
            {%- for block in button_blocks -%}
              {%- if block.settings.label != blank -%}
                <a
                  href="{{ block.settings.link | default: '#' }}"
                  class="hero-button"
                  style="
                    min-width: {{ section.settings.button_min_width }}px;
                    height: {{ section.settings.button_height }}px;
                  "
                  {% if block.settings.open_in_new_tab %}
                    target="_blank" rel="noopener"
                  {% endif %}
                  {{ block.shopify_attributes }}
                >
                  {{ block.settings.label }}
                </a>
              {%- endif -%}
            {%- endfor -%}
          </div>
        {%- endif -%}

        <!-- Fallback content for empty states -->
        {%- unless section.blocks.size > 0 -%}
          <div class="hero-text-block">
            <h1>The Perfect Brow Duo</h1>
            <p>Everything you need for flawless brows, every day.</p>
          </div>
          <div
            class="hero-button-block{% if section.settings.equal_button_width %} equal-width{% endif %}"
            style="gap: {{ section.settings.button_gap }}px;"
          >
            <a
              href="/products/the-duo"
              class="hero-button"
              style="
                min-width: {{ section.settings.button_min_width }}px;
                height: {{ section.settings.button_height }}px;
              "
            >
              Shop The Duo - $34.99
            </a>
            <a
              href="#shopify-section-how_to"
              class="hero-button"
              style="
                min-width: {{ section.settings.button_min_width }}px;
                height: {{ section.settings.button_height }}px;
              "
            >
              Learn How to Use
            </a>
          </div>
        {%- endunless -%}
      </div>
    </div>
  </div>
</div>

{% stylesheet %}
  /* ===== CSS VARIABLES FOR ADMIN SETTINGS ===== */
  :root {
    --glass-opacity: 0.78;
    --button-gap: 16px;
    --button-min-width: 200px;
    --button-height: 48px;
  }

  /* ===== CORE HERO SECTION STYLES ===== */
  .hero-section {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  /* ===== BACKGROUND IMAGE STYLES ===== */
  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .hero-bg-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .hero-image-desktop {
    display: block;
  }

  .hero-image-mobile {
    display: none;
  }

  @media (max-width: 767px) {
    .hero-image-desktop {
      display: none;
    }

    .hero-image-mobile {
      display: block;
    }
  }

  /* ===== CONTENT LAYOUT ===== */
  .hero-content {
    position: relative;
    z-index: 2;
    width: 100%;
    max-width: 1200px;
    padding: 2rem;
  }

  .hero-container {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    padding: 2rem;
  }

  /* ===== VERTICAL POSITIONING ===== */
  .hero-container--top {
    align-items: flex-start;
    padding-top: 4rem;
  }

  .hero-container--center {
    align-items: center;
  }

  .hero-container--bottom {
    align-items: flex-end;
    padding-bottom: 4rem;
  }

  /* ===== GLASS EFFECT CONTAINER ===== */
  .hero-text {
    display: grid;
    gap: clamp(1.25rem, 3vw, 1.8rem);
    color: var(--glass-foreground-strong, var(--color-foreground, #2c2c2c));
    width: 100%;
    position: relative;
  }

  /* ===== CONTENT ALIGNMENT ===== */
  .hero-text--center {
    text-align: center;
  }

  .hero-text--left {
    text-align: left;
  }

  .hero-text--right {
    text-align: right;
  }

  .hero-text:not(.glass-surface) {
    background: rgba(255, 255, 255, var(--glass-opacity, 0.78));
    border: 1px solid var(--glass-surface-border-color, rgba(255, 255, 255, 0.4));
    box-shadow: 0 16px 40px var(--glass-shadow-color, rgba(20, 26, 34, 0.12));
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
  }

  .hero-text.glass-surface {
    padding: clamp(1.8rem, 3.5vw, 2.4rem);
    border: none;
    box-shadow: none;
  }

  /* ===== TYPOGRAPHY STYLES ===== */
  .hero-text-block h1,
  .hero-text-block h2,
  .hero-text-block h3,
  .hero-text-block h4,
  .hero-text-block h5,
  .hero-text-block h6 {
    font-size: clamp(2rem, 4vw, 2.8rem);
    font-weight: 700;
    margin: 0;
    color: var(--glass-foreground-strong, var(--color-foreground, #2c2c2c));
    line-height: 1.2;
  }

  .hero-text-block p {
    font-size: 1.05rem;
    line-height: 1.65;
    color: var(--glass-foreground-muted, var(--color-foreground, #2c2c2c));
    margin: 0;
  }

  /* ===== BUTTON LAYOUT ===== */
  .hero-button-block {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
  }

  /* ===== EQUAL WIDTH BUTTONS ===== */
  .hero-button-block.equal-width {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--button-gap, 16px);
  }

  .hero-button-block.equal-width .hero-button {
    width: 100%;
    justify-content: center;
  }

  /* ===== PRIMARY BUTTON STYLES ===== */
  .hero-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.4rem;
    padding: 0.85rem 1.8rem;
    border-radius: 999px;
    text-decoration: none;
    font-weight: 600;
    color: var(--text-on-primary, #ffffff);
    background: linear-gradient(
      135deg,
      var(--glass-highlight-color, var(--color-primary, #bf8a7a)) 0%,
      var(--color-primary, #bf8a7a) 100%
    );
    border: 1px solid var(--glass-surface-border-color, rgba(255, 255, 255, 0.4));
    transition: all 0.3s ease;
    will-change: transform;
    min-width: var(--button-min-width, 200px);
    height: var(--button-height, 48px);
  }

  .hero-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 24px 48px
      color-mix(in srgb, var(--glass-highlight-color, var(--color-primary, #bf8a7a)) 32%, transparent);
  }

  .hero-button:focus {
    outline: 2px solid var(--glass-highlight-color, var(--color-primary, #bf8a7a));
    outline-offset: 2px;
  }

  .hero-button:focus-visible {
    outline: 2px solid var(--glass-highlight-color, var(--color-primary, #bf8a7a));
    outline-offset: 2px;
  }

  /* ===== SECONDARY BUTTON STYLES ===== */
  .hero-button[href*='#shopify-section'] {
    background: transparent;
    color: var(--glass-foreground-strong, var(--color-foreground, #2c2c2c));
    border: 2px solid var(--glass-highlight-color, var(--color-primary, #bf8a7a));
  }

  .hero-button[href*='#shopify-section']:hover {
    background: var(--glass-highlight-color, var(--color-primary, #bf8a7a));
    color: white;
  }

  /* ===== RESPONSIVE DESIGN ===== */
  /* Mobile First Approach */
  @media (max-width: 768px) {
    .hero-container {
      padding: 1rem;
    }

    .hero-text,
    .hero-text.glass-surface {
      padding: clamp(1.5rem, 5vw, 1.9rem);
    }

    .hero-text-block h1,
    .hero-text-block h2,
    .hero-text-block h3,
    .hero-text-block h4,
    .hero-text-block h5,
    .hero-text-block h6 {
      font-size: clamp(1.8rem, 6vw, 2.5rem);
    }

    .hero-button-block {
      flex-direction: column;
      align-items: center;
      gap: 0.75rem;
    }

    .hero-button {
      width: 100%;
      max-width: 280px;
      justify-content: center;
    }
  }

  /* Tablet Optimization */
  @media (min-width: 768px) {
    .hero-container {
      padding: 1.5rem;
    }

    .hero-text {
      max-width: 500px;
    }
  }

  /* Desktop Enhancements */
  @media (min-width: 1024px) {
    .hero-container {
      padding: 2rem;
    }

    .hero-text {
      max-width: 600px;
    }

    .hero-button-block {
      flex-direction: row;
      justify-content: center;
    }
  }

  /* Large Screen Optimization */
  @media (min-width: 1440px) {
    .hero-text {
      max-width: 700px;
    }
  }

  /* ===== ACCESSIBILITY ENHANCEMENTS ===== */
  @media (prefers-reduced-motion: reduce) {
    .hero-button {
      transition: none;
    }

    .hero-button:hover {
      transform: none;
    }
  }

  /* ===== HIGH CONTRAST MODE SUPPORT ===== */
  @media (prefers-contrast: high) {
    .hero-text:not(.glass-surface) {
      background: var(--color-background, #ffffff);
      border: 2px solid var(--color-foreground, #000000);
    }

    .hero-button {
      border: 2px solid var(--color-foreground, #000000);
    }
  }
{% endstylesheet %}

