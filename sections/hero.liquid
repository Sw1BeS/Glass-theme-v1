{% comment %}
  Hero Section - Main banner with glassmorphism design and dynamic theme switching
  Features: Full-screen background, glass effect content blocks, responsive design
  Follows Shopify OS 2.0 standards with block-based architecture
{% endcomment %}

{% liquid
  assign glass_enabled = section.settings.enable_glass
  if glass_enabled == null
    assign glass_enabled = settings.enable_glass_effect
  endif
  assign glass_tone = section.settings.glass_tone | default: 'auto'
  assign glass_elevation = section.settings.glass_elevation | default: 'medium'
%}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<div
  class="section section--{{ section.settings.section_width }} hero-section color-{{ section.settings.color_scheme }} spacing-style"
  {% if glass_enabled %}
    data-glass-tone="{{ glass_tone }}"
    data-glass-elevation="{{ glass_elevation }}"
  {% endif %}
>
  <!-- Background Image -->
  <div class="hero-background">
    {%- if section.settings.image_1 != blank -%}
    <!-- Desktop Image -->
      <div class="hero-image-desktop">
    {{
      section.settings.image_1
          | image_url: width: 1920
      | image_tag:
            loading: 'eager',
            sizes: '(min-width: 768px) 100vw, 0px',
            widths: '768, 1024, 1280, 1920',
            class: 'hero-bg-image'
      }}
    </div>
    {%- endif -%}

      {%- if section.settings.image_1_mobile != blank -%}
      <!-- Mobile Image -->
      <div class="hero-image-mobile">
        {{
          section.settings.image_1_mobile
          | image_url: width: 768
          | image_tag:
            loading: 'eager',
            sizes: '(max-width: 767px) 100vw, 0px',
            widths: '375, 414, 768',
            class: 'hero-bg-image'
        }}
      </div>
    {%- elsif section.settings.image_1 != blank -%}
        <!-- Fallback to desktop image for mobile -->
      <div class="hero-image-mobile">
        {{
          section.settings.image_1
          | image_url: width: 768
          | image_tag:
            loading: 'eager',
            sizes: '(max-width: 767px) 100vw, 0px',
            widths: '375, 414, 768',
            class: 'hero-bg-image'
    }}
    </div>
  {%- endif -%}
    </div>

  <!-- Content Overlay -->
  <div class="hero-content">
    <div class="hero-container" style="justify-content: {{ section.settings.panel_position | default: 'center' }};">
      <div
        class="hero-panel glass"
  style="
          max-width: {{ section.settings.panel_max_width | default: 600 }}px;
          padding: {{ section.settings.panel_padding | default: 40 }}px;
          border-radius: {{ section.settings.panel_border_radius | default: 24 }}px;
          background: var(--glass-surface-color, rgba(255, 255, 255, {{ section.settings.panel_opacity | default: 85 | divided_by: 100.0 }}));
        "
      >
        <div class="hero-panel-content">
          {%- for block in section.blocks -%}
            {%- case block.type -%}
              {%- when 'text' -%}
                <div class="hero-text-block" {{ block.shopify_attributes }}>
                  {{ block.settings.text }}
      </div>
              {%- when 'button' -%}
                {%- if block.settings.label != blank -%}
                  <a
                    href="{{ block.settings.link | default: '#' }}"
                    class="hero-button"
                    {% if block.settings.open_in_new_tab %}
          target="_blank" rel="noopener"
        {% endif %}
                    {{ block.shopify_attributes }}
                  >
                    {{ block.settings.label }}
                  </a>
      {%- endif -%}
            {%- endcase -%}
          {%- endfor -%}

          <!-- Fallback content for empty states -->
          {%- unless section.blocks.size > 0 -%}
            <div class="hero-text-block">
              <h1>The Perfect Brow Duo</h1>
              <p>Everything you need for flawless brows, every day.</p>
    </div>
            <a href="/products/the-duo" class="hero-button">
              Shop The Duo - $34.99
            </a>
            <a href="#shopify-section-how_to" class="hero-button">
              Learn How to Use
            </a>
          {%- endunless -%}
        </div>
      </div>
    </div>
  </div>
</div>

{% stylesheet %}
  /* ===== CSS VARIABLES FOR ADMIN SETTINGS ===== */
  :root {
    --glass-opacity: 0.8;
    --button-gap: 16px;
    --button-min-width: 200px;
    --button-height: 48px;
  }

  /* ===== CORE HERO SECTION STYLES ===== */
  .hero-section {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  /* ===== BACKGROUND IMAGE STYLES ===== */
  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .hero-bg-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .hero-image-desktop {
    display: block;
  }

  .hero-image-mobile {
    display: none;
  }

  @media (max-width: 767px) {
    .hero-image-desktop {
      display: none;
    }

    .hero-image-mobile {
      display: block;
    }
  }

  /* ===== CONTENT LAYOUT ===== */
  .hero-content {
    position: relative;
    z-index: 2;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    padding: 2rem;
  }

  .hero-container {
    width: 100%;
    max-width: 1200px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* ===== GLASS PANEL ===== */
  .hero-panel {
    border: 1px solid var(--glass-surface-border-color, rgba(255, 255, 255, 0.3));
    box-shadow: 0 20px 50px var(--glass-shadow-color, rgba(0, 0, 0, 0.15));
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    text-align: center;
    width: 100%;
  }

  .hero-panel-content {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    align-items: center;
  }

  /* ===== TYPOGRAPHY STYLES ===== */
  .hero-text-block h1,
  .hero-text-block h2,
  .hero-text-block h3,
  .hero-text-block h4,
  .hero-text-block h5,
  .hero-text-block h6 {
    font-size: clamp(2.2rem, 5vw, 3.2rem);
    font-weight: 700;
    margin: 0 0 1rem 0;
    color: var(--glass-foreground-strong, var(--color-foreground, #2c2c2c));
    line-height: 1.1;
    letter-spacing: -0.02em;
  }

  .hero-text-block p {
    font-size: 1.1rem;
    line-height: 1.6;
    color: var(--glass-foreground-muted, var(--color-foreground, #2c2c2c));
    margin: 0;
    opacity: 0.9;
  }

  /* ===== BUTTON STYLES ===== */
  .hero-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 1rem 2.5rem;
    border-radius: 12px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    cursor: pointer;
    border: 2px solid transparent;
    font-size: 1rem;
    line-height: 1.5;
    min-width: 200px;
    height: 52px;
    background: var(--glass-highlight-color, var(--color-primary, #bf8a7a));
    color: var(--glass-foreground-strong, #ffffff);
    box-shadow: 0 4px 15px var(--glass-shadow-color, rgba(0, 0, 0, 0.1));
  }

  .hero-button:hover {
    background: var(--color-primary-hover, #a67666);
    transform: translateY(-2px);
    box-shadow: 0 8px 25px var(--glass-shadow-color, rgba(0, 0, 0, 0.15));
  }

  .hero-button:active {
    transform: translateY(0);
  }

  .hero-button:focus {
    outline: 2px solid var(--glass-highlight-color, var(--color-primary, #bf8a7a));
    outline-offset: 2px;
  }

  /* ===== MOBILE STYLES ===== */
  @media (max-width: 767px) {
    .hero-content {
      padding: 1rem;
    }

    .hero-panel {
      max-width: 100% !important;
    }

    .hero-panel-content {
      gap: 1.25rem;
    }

    .hero-text-block h1,
    .hero-text-block h2,
    .hero-text-block h3,
    .hero-text-block h4,
    .hero-text-block h5,
    .hero-text-block h6 {
      font-size: clamp(1.8rem, 6vw, 2.5rem);
    }

    .hero-text-block p {
      font-size: 1rem;
    }

    .hero-button {
      padding: 0.875rem 2rem;
      min-width: 180px;
      height: 48px;
      font-size: 0.95rem;
    }
  }

  .hero-button:focus-visible {
    outline: 2px solid var(--glass-highlight-color, var(--color-primary, #bf8a7a));
    outline-offset: 2px;
  }

  /* ===== SECONDARY BUTTON STYLES ===== */
  .hero-button[href*='#shopify-section'] {
    background: transparent;
    color: var(--glass-foreground-strong, var(--color-foreground, #2c2c2c));
    border: 2px solid var(--glass-highlight-color, var(--color-primary, #bf8a7a));
  }

  .hero-button[href*='#shopify-section']:hover {
    background: var(--glass-highlight-color, var(--color-primary, #bf8a7a));
    color: white;
  }

  /* ===== RESPONSIVE DESIGN ===== */
  /* Mobile First Approach */
  @media (max-width: 768px) {
    .hero-container {
      padding: 1rem;
    }

    .hero-text,
    .hero-text.glass-surface {
      padding: clamp(1.5rem, 5vw, 1.9rem);
    }

    .hero-text-block h1,
    .hero-text-block h2,
    .hero-text-block h3,
    .hero-text-block h4,
    .hero-text-block h5,
    .hero-text-block h6 {
      font-size: clamp(1.8rem, 6vw, 2.5rem);
    }

    .hero-button-block {
      flex-direction: column;
      align-items: center;
      gap: 0.75rem;
    }

    .hero-button {
    width: 100%;
      max-width: 280px;
      justify-content: center;
    }
  }

  /* Tablet Optimization */
  @media (min-width: 768px) {
    .hero-container {
      padding: 1.5rem;
    }

    .hero-text {
      max-width: 500px;
    }
  }

  /* Desktop Enhancements */
  @media (min-width: 1024px) {
    .hero-container {
      padding: 2rem;
    }

    .hero-text {
      max-width: 600px;
    }

    .hero-button-block {
      flex-direction: row;
      justify-content: center;
    }
  }

  /* Large Screen Optimization */
  @media (min-width: 1440px) {
    .hero-text {
      max-width: 700px;
    }
  }

  /* ===== ACCESSIBILITY ENHANCEMENTS ===== */
  @media (prefers-reduced-motion: reduce) {
    .hero-button {
      transition: none;
    }

    .hero-button:hover {
      transform: none;
    }
  }

  /* ===== HIGH CONTRAST MODE SUPPORT ===== */
  @media (prefers-contrast: high) {
    .hero-text:not(.glass-surface) {
      background: var(--color-background, #ffffff);
      border: 2px solid var(--color-foreground, #000000);
    }

    .hero-button {
      border: 2px solid var(--color-foreground, #000000);
    }
  }
{% endstylesheet %}

