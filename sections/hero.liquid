{% liquid
  assign glass_enabled = section.settings.enable_glass
  if glass_enabled == null
    assign glass_enabled = settings.enable_glass_effect
  endif
%}

<div class="hero-section">
  <!-- Background Image -->
  {%- if section.settings.image_1 != blank -%}
    <div class="hero-background">
      <img
        src="{{ section.settings.image_1 | image_url: width: 1920 }}"
        alt="{{ section.settings.image_1.alt | default: 'Hero background' }}"
        class="hero-bg-image hero-bg-desktop"
        loading="eager"
        width="1920"
        height="1080"
      >
    </div>
  {%- endif -%}

  {%- if section.settings.image_1_mobile != blank -%}
    <div class="hero-background-mobile">
      <img
        src="{{ section.settings.image_1_mobile | image_url: width: 768 }}"
        alt="{{ section.settings.image_1_mobile.alt | default: 'Hero background mobile' }}"
        class="hero-bg-image hero-bg-mobile"
        loading="eager"
        width="768"
        height="1024"
      >
    </div>
  {%- endif -%}

  <!-- Content Overlay -->
  <div class="hero-container">
    <div class="hero-content">
      <div
        class="hero-text glass"
        style="
          max-width: {{ section.settings.glass_max_width }}px;
          padding: {{ section.settings.glass_padding }}px;
          border-radius: {{ section.settings.glass_border_radius }}px;
          background: rgba(255, 255, 255, {{ section.settings.glass_opacity }});
        "
      >
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'text' -%}
              <div class="hero-text-block" {{ block.shopify_attributes }}>
                {{ block.settings.text }}
              </div>
            {%- when 'button' -%}
              {%- if block.settings.label != blank -%}
                <div class="hero-button-block" {{ block.shopify_attributes }}>
                  <a
                    href="{{ block.settings.link | default: '#' }}"
                    class="hero-button"
                    {% if block.settings.open_in_new_tab %}
                      target="_blank" rel="noopener"
                    {% endif %}
                  >
                    {{ block.settings.label }}
                  </a>
                </div>
              {%- endif -%}
          {%- endcase -%}
        {%- endfor -%}

        <!-- Fallback content for empty states -->
        {%- unless section.blocks.size > 0 -%}
          <div class="hero-text-block">
            <h1>The Perfect Brow Duo</h1>
            <p>Everything you need for flawless brows, every day.</p>
          </div>
          <div class="hero-button-block">
            <a href="/products/the-duo" class="hero-button">Shop The Duo - $34.99</a>
            <a href="#shopify-section-how_to" class="hero-button">Learn How to Use</a>
          </div>
        {%- endunless -%}
      </div>
    </div>
  </div>
</div>

{% stylesheet %}
  /* ===== HERO SECTION STYLES ===== */
  .hero-section {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  /* Background Images */
  .hero-background,
  .hero-background-mobile {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .hero-bg-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .hero-bg-mobile {
    display: none;
  }

  .hero-container {
    position: relative;
    z-index: 2;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-content {
    width: 100%;
    max-width: 800px;
    text-align: center;
  }

  .hero-text {
    background: var(--glass-surface-color, rgba(255, 255, 255, 0.78));
    border: 1px solid var(--glass-surface-border-color, rgba(255, 255, 255, 0.4));
    box-shadow: 0 16px 40px var(--glass-shadow-color, rgba(20, 26, 34, 0.12));
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-radius: 24px;
    padding: 3rem 2rem;
    margin: 0 auto;
  }

  .hero-text:not(.glass-surface) {
    background: var(--glass-surface-color, rgba(255, 255, 255, 0.78));
    border: 1px solid var(--glass-surface-border-color, rgba(255, 255, 255, 0.4));
    box-shadow: 0 16px 40px var(--glass-shadow-color, rgba(20, 26, 34, 0.12));
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
  }

  .hero-text-block {
    margin-bottom: 1.5rem;
  }

  .hero-text-block:last-child {
    margin-bottom: 0;
  }

  .hero-text-block h1,
  .hero-text-block h2,
  .hero-text-block h3,
  .hero-text-block h4,
  .hero-text-block h5,
  .hero-text-block h6 {
    color: var(--glass-foreground-strong, var(--color-foreground, #2c2c2c)) !important;
    font-weight: 700;
    margin: 0 0 1rem 0;
    line-height: 1.2;
  }

  .hero-text-block p {
    color: var(--glass-foreground-muted, var(--color-foreground-muted, #666)) !important;
    font-size: 1.125rem;
    line-height: 1.6;
    margin: 0;
  }

  .hero-button-block {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    justify-content: center;
    align-items: center;
    margin-top: 2rem;
  }

  .hero-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.875rem 2rem;
    font-size: 1rem;
    font-weight: 600;
    text-decoration: none;
    border-radius: 12px;
    transition: all 0.3s ease;
    cursor: pointer;
    border: 2px solid transparent;
    min-width: 200px;
    height: 48px;
    text-align: center;
    white-space: nowrap;
  }

  .hero-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  }

  .hero-button:active {
    transform: translateY(0);
  }

  /* Primary button style */
  .hero-button:first-child {
    background: var(--glass-highlight-color, var(--color-primary, #bf8a7a)) !important;
    color: white !important;
    border-color: var(--glass-highlight-color, var(--color-primary, #bf8a7a)) !important;
  }

  .hero-button:first-child:hover {
    background: var(--color-primary-hover, var(--glass-highlight-color, #bf8a7a)) !important;
    border-color: var(--color-primary-hover, var(--glass-highlight-color, #bf8a7a)) !important;
  }

  /* Secondary button style */
  .hero-button:not(:first-child) {
    background: transparent !important;
    color: var(--glass-foreground-strong, var(--color-foreground, #2c2c2c)) !important;
    border-color: var(--glass-highlight-color, var(--color-primary, #bf8a7a)) !important;
  }

  .hero-button:not(:first-child):hover {
    background: var(--glass-highlight-color, var(--color-primary, #bf8a7a)) !important;
    color: white !important;
  }

  /* ===== RESPONSIVE DESIGN ===== */
  @media (max-width: 768px) {
    .hero-bg-desktop {
      display: none;
    }

    .hero-bg-mobile {
      display: block;
    }

    .hero-container {
      padding: 1rem;
    }

    .hero-text {
      padding: 2rem 1.5rem;
      border-radius: 16px;
    }

    .hero-text-block h1,
    .hero-text-block h2,
    .hero-text-block h3,
    .hero-text-block h4,
    .hero-text-block h5,
    .hero-text-block h6 {
      font-size: 2rem;
    }

    .hero-text-block p {
      font-size: 1rem;
    }

    .hero-button-block {
      flex-direction: column;
      gap: 0.75rem;
    }

    .hero-button {
      width: 100%;
      max-width: 280px;
    }
  }

  @media (min-width: 769px) and (max-width: 1024px) {
    .hero-text {
      padding: 2.5rem 2rem;
    }
  }

  @media (min-width: 1025px) {
    .hero-text {
      padding: 3rem 2rem;
    }
  }

  /* ===== ACCESSIBILITY ENHANCEMENTS ===== */
  @media (prefers-reduced-motion: reduce) {
    .hero-button {
      transition: none;
    }

    .hero-button:hover {
      transform: none;
    }
  }

  /* ===== HIGH CONTRAST MODE SUPPORT ===== */
  @media (prefers-contrast: high) {
    .hero-text {
      border-width: 2px;
    }

    .hero-button {
      border-width: 2px;
    }
  }
{% endstylesheet %}

