{% comment %}
  Founder Section - Enhanced storytelling with animations, timeline, and counters
  Features: Professional layout, animated counters, roadmap timeline, achievements, clean design, theme integration
{% endcomment %}

<div class="founder-section" style="{% render 'spacing-style', settings: section.settings %}">
  <div class="founder-container">
    <!-- Our Story Header -->
    <div class="story-header">
      {%- for block in section.blocks -%}
        {%- if block.type == 'section_header' -%}
          <h2 class="story-title">{{ block.settings.heading | default: 'Our Story' }}</h2>
          {%- if block.settings.subheading != blank -%}
            <p class="story-subtitle">{{ block.settings.subheading }}</p>
          {%- endif -%}
        {%- endif -%}
      {%- endfor -%}
    </div>

    <!-- Founder Introduction -->
    <div class="founder-intro">
      <div class="founder-image">
        {% if section.settings.founder_image != blank %}
          <!-- Desktop Image -->
          <div class="founder-image-desktop">
            {% render 'image', image: section.settings.founder_image, alt: section.settings.founder_name %}
          </div>

          <!-- Mobile Image -->
          <div class="founder-image-mobile">
            {% if section.settings.founder_image_mobile != blank %}
              {% render 'image', image: section.settings.founder_image_mobile, alt: section.settings.founder_name %}
            {% else %}
              <!-- Fallback to desktop image for mobile -->
              {% render 'image', image: section.settings.founder_image, alt: section.settings.founder_name %}
            {% endif %}
          </div>
        {% else %}
          <div class="founder-placeholder">
            <div class="placeholder-content">
              <div class="placeholder-icon">üë©‚Äçüíº</div>
              <div class="placeholder-text">
                <strong>Founder Photo</strong><br>
                Recommended: 800x1000px<br>
                Professional headshot with clean background
              </div>
            </div>
          </div>
        {% endif %}
      </div>

      <div class="founder-info">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'founder_info' -%}
              <h2 class="founder-title" {{ block.shopify_attributes }}>
                {{ block.settings.founder_name | default: section.settings.founder_name }}
              </h2>
              <p class="founder-subtitle" {{ block.shopify_attributes }}>
                {{ block.settings.founder_title | default: section.settings.founder_title }}
              </p>
          {%- endcase -%}
        {%- endfor -%}

        {%- comment -%} Fallback to settings if no founder_info block {%- endcomment -%}
        {%- assign founder_info_found = false -%}
        {%- for block in section.blocks -%}
          {%- if block.type == 'founder_info' -%}
            {%- assign founder_info_found = true -%}
            {%- break -%}
          {%- endif -%}
        {%- endfor -%}

        {%- unless founder_info_found -%}
          {% if section.settings.founder_name != blank %}
            <h2 class="founder-title">{{ section.settings.founder_name }}</h2>
          {% endif %}
          {% if section.settings.founder_title != blank %}
            <p class="founder-subtitle">{{ section.settings.founder_title }}</p>
          {% endif %}
        {%- endunless -%}

        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'founder_story' -%}
              <div class="founder-story" {{ block.shopify_attributes }}>
                {{ block.settings.story | default: section.settings.founder_story }}
              </div>
          {%- endcase -%}
        {%- endfor -%}

        {%- comment -%} Fallback to settings if no founder_story block {%- endcomment -%}
        {%- assign founder_story_found = false -%}
        {%- for block in section.blocks -%}
          {%- if block.type == 'founder_story' -%}
            {%- assign founder_story_found = true -%}
            {%- break -%}
          {%- endif -%}
        {%- endfor -%}

        {%- unless founder_story_found -%}
          {% if section.settings.founder_story != blank %}
            <div class="founder-story">
              {{ section.settings.founder_story }}
            </div>
          {% endif %}
        {%- endunless -%}
      </div>
    </div>

    <!-- Founder Quotes Carousel -->
    {%- for block in section.blocks -%}
      {%- case block.type -%}
        {%- when 'founder_quote' -%}
          <div class="founder-quotes-carousel" {{ block.shopify_attributes }}>
            <div class="quotes-container">
              <div class="quote-slide active">
                <blockquote class="founder-quote">
                  <p>"{{ block.settings.quote | default: section.settings.founder_quote }}"</p>
                </blockquote>
              </div>
            </div>
          </div>
      {%- endcase -%}
    {%- endfor -%}

    {%- comment -%} Fallback to settings if no founder_quote block {%- endcomment -%}
    {%- assign founder_quote_found = false -%}
    {%- for block in section.blocks -%}
      {%- if block.type == 'founder_quote' -%}
        {%- assign founder_quote_found = true -%}
        {%- break -%}
      {%- endif -%}
    {%- endfor -%}

    {%- unless founder_quote_found -%}
      <div class="founder-quotes-carousel">
        <div class="quotes-container">
          <div class="quote-slide active">
            <blockquote class="founder-quote">
              <p>"{{ section.settings.quote_1 }}"</p>
            </blockquote>
          </div>
          <div class="quote-slide">
            <blockquote class="founder-quote">
              <p>"{{ section.settings.quote_2 }}"</p>
            </blockquote>
          </div>
          <div class="quote-slide">
            <blockquote class="founder-quote">
              <p>"{{ section.settings.quote_3 }}"</p>
            </blockquote>
          </div>
          <div class="quote-slide">
            <blockquote class="founder-quote">
              <p>"{{ section.settings.quote_4 }}"</p>
            </blockquote>
          </div>
          <div class="quote-slide">
            <blockquote class="founder-quote">
              <p>"{{ section.settings.quote_5 }}"</p>
            </blockquote>
          </div>
        </div>
        <div class="quote-indicators">
          <span class="indicator active" data-slide="0"></span>
          <span class="indicator" data-slide="1"></span>
          <span class="indicator" data-slide="2"></span>
          <span class="indicator" data-slide="3"></span>
          <span class="indicator" data-slide="4"></span>
        </div>
      </div>
    {%- endunless -%}

    <!-- Animated Stats -->
    {%- for block in section.blocks -%}
      {%- case block.type -%}
        {%- when 'founder_stats' -%}
          <div class="stats-section" {{ block.shopify_attributes }}>
            <div class="stats-grid">
              <div class="stat-item">
                <div
                  class="stat-number"
                  data-target="{{ block.settings.years_experience | default: section.settings.years_experience | default: 23 }}"
                >
                  0
                </div>
                <div class="stat-label">Years of Experience</div>
              </div>
              <div class="stat-item">
                <div
                  class="stat-number"
                  data-target="{{ block.settings.happy_customers | default: section.settings.happy_customers | default: 647 }}"
                >
                  0
                </div>
                <div class="stat-label">Happy Customers</div>
              </div>
              <div class="stat-item">
                <div
                  class="stat-number"
                  data-target="{{ block.settings.countries_served | default: section.settings.countries_served | default: 23 }}"
                >
                  0
                </div>
                <div class="stat-label">Countries Served</div>
              </div>
              <div class="stat-item">
                <div
                  class="stat-number"
                  data-target="{{ block.settings.ingredients_tested | default: section.settings.ingredients_tested | default: 187 }}"
                >
                  0
                </div>
                <div class="stat-label">Ingredients Tested</div>
              </div>
            </div>
          </div>
      {%- endcase -%}
    {%- endfor -%}

    {%- comment -%} Fallback to settings if no founder_stats block {%- endcomment -%}
    {%- assign founder_stats_found = false -%}
    {%- for block in section.blocks -%}
      {%- if block.type == 'founder_stats' -%}
        {%- assign founder_stats_found = true -%}
        {%- break -%}
      {%- endif -%}
    {%- endfor -%}

    {%- unless founder_stats_found -%}
      <div class="stats-section">
        <div class="stats-grid">
          <div class="stat-item">
            <div class="stat-number" data-target="{{ section.settings.years_experience | default: 23 }}">0</div>
            <div class="stat-label">Years of Experience</div>
          </div>
          <div class="stat-item">
            <div class="stat-number" data-target="{{ section.settings.happy_customers | default: 647 }}">0</div>
            <div class="stat-label">Happy Customers</div>
          </div>
          <div class="stat-item">
            <div class="stat-number" data-target="{{ section.settings.countries_served | default: 23 }}">0</div>
            <div class="stat-label">Countries Served</div>
          </div>
          <div class="stat-item">
            <div class="stat-number" data-target="{{ section.settings.ingredients_tested | default: 187 }}">0</div>
            <div class="stat-label">Ingredients Tested</div>
          </div>
        </div>
      </div>
    {%- endunless -%}

    <!-- Company Mission -->
    <div class="mission-section">
      <h3 class="mission-title">Our Mission</h3>
      <p class="mission-text">
        We are IS Beauty Lux‚Ñ¢, a self-care brand dedicated to creating safe, effective, and beautifully crafted
        products.
      </p>
      <p class="mission-text">
        Our mission is to simplify beauty routines with safe formulas, dermatologist-tested, water-based, non-toxic
        ingredients, and elegant packaging.
      </p>
      <p class="mission-text">
        Inspired by real women. Made for everyday elegance. At IS Beauty Lux‚Ñ¢, we believe beauty should feel effortless.
        Our journey began with a mission: to create self-care essentials that elevate your daily routine ‚Äî without
        adding stress, time, or harmful ingredients.
      </p>
      <p class="mission-text">
        With over 20 years of experience in the beauty industry, we carefully formulated every product to be clean,
        effective, and beautifully designed. Our brow gel and lash shampoo are crafted to deliver salon-worthy results
        at home, with packaging you'll be proud to display.
      </p>
      <p class="mission-text">
        We believe in transparency, quality, and the power of simplicity. Every ingredient is carefully selected, every
        formula is rigorously tested, and every product is designed to make you feel confident and beautiful in your own
        skin.
      </p>
      <p class="mission-text">
        Our commitment to clean beauty goes beyond just ingredients. We believe in ethical sourcing, sustainable
        packaging, and supporting women-owned businesses throughout our supply chain. Every product we create is a
        reflection of our values and our promise to you.
      </p>
      <p class="mission-text">
        We understand that beauty routines should be moments of self-care, not sources of stress. That's why we've
        designed our products to be intuitive, effective, and enjoyable to use. Whether you're a beauty novice or a
        seasoned expert, our products adapt to your needs and enhance your natural beauty.
      </p>
      <p class="mission-text">
        At IS Beauty Lux‚Ñ¢, we're not just creating products ‚Äì we're building a community of confident, empowered women
        who believe in the power of clean, effective beauty. Join us on this journey to redefine what beauty means in
        the modern world.
      </p>
    </div>

    <!-- Journey Timeline -->
    <div class="timeline-section">
      <h3 class="timeline-title">Our Journey</h3>
      <div class="timeline">
        <div class="timeline-item">
          <div class="timeline-year">2001</div>
          <div class="timeline-content">
            <h4>Started in Beauty Industry</h4>
            <p>Began career in cosmetic chemistry and product development</p>
          </div>
        </div>
        <div class="timeline-item">
          <div class="timeline-year">2015</div>
          <div class="timeline-content">
            <h4>Clean Beauty Vision</h4>
            <p>Recognized the need for safer, more effective beauty products</p>
          </div>
        </div>
        <div class="timeline-item">
          <div class="timeline-year">2020</div>
          <div class="timeline-content">
            <h4>IS Beauty Lux Founded</h4>
            <p>Launched with mission to create salon-worthy results at home</p>
          </div>
        </div>
        <div class="timeline-item">
          <div class="timeline-year">2024</div>
          <div class="timeline-content">
            <h4>Global Expansion</h4>
            <p>Now serving customers worldwide with trusted beauty solutions</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Philosophy Section -->
    <div class="philosophy-section">
      <h3 class="philosophy-title">Inspired by Real Women. Made for Everyday Elegance.</h3>
      <div class="philosophy-content">
        <p>
          At IS Beauty Lux‚Ñ¢, we believe beauty should feel effortless. Our journey began with a mission: to create
          self-care essentials that elevate your daily routine ‚Äî without adding stress, time, or harmful ingredients.
        </p>
        <p>
          With over 20 years of experience in the beauty industry, we carefully formulated every product to be clean,
          effective, and beautifully designed.
        </p>
        <p>
          Our brow gel and lash shampoo are crafted to deliver salon-worthy results at home, with packaging you'll be
          proud to display.
        </p>
      </div>
    </div>

    <!-- Achievements -->
    {% if section.settings.achievements != blank %}
      <div class="founder-achievements">
        <h3 class="achievements-title">Key Achievements</h3>
        <div class="achievements-grid">
          {%- for block in section.blocks -%}
            {%- if block.type == 'achievement' -%}
              <div class="achievement-item" {{ block.shopify_attributes }}>
                {% if block.settings.icon != blank %}
                  <div class="achievement-icon">{{ block.settings.icon }}</div>
                {% endif %}
                <div class="achievement-content">
                  {% if block.settings.title != blank %}
                    <h4 class="achievement-title">{{ block.settings.title }}</h4>
                  {% endif %}
                  {% if block.settings.description != blank %}
                    <p class="achievement-description">{{ block.settings.description }}</p>
                  {% endif %}
                </div>
              </div>
            {%- endif -%}
          {%- endfor -%}
        </div>
      </div>
    {% endif %}
  </div>
</div>

<style>
  .founder-section {
    padding: 4rem 0;
    background: var(--color-background, #ffffff);
  }

  .founder-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* Story Header */
  .story-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .story-title {
    font-size: 3rem;
    font-weight: 700;
    color: var(--color-foreground, #2c2c2c);
    margin: 0 0 1rem 0;
    position: relative;
  }

  .story-title::after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 3px;
    background: var(--color-primary, #bf8a7a);
    border-radius: 2px;
    /* animation: glowPulse 2s ease-in-out infinite alternate; */
  }

  .story-subtitle {
    font-size: 1.3rem;
    color: var(--color-primary, #bf8a7a);
    font-weight: 500;
    margin: 0;
  }

  /* Founder Introduction */
  .founder-intro {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
    margin-bottom: 4rem;
  }

