{% comment %}
  Founder Section - Enhanced storytelling with animations, timeline, and counters
  Features: Professional layout, animated counters, roadmap timeline, achievements, clean design, theme integration
{% endcomment %}

<div class="founder-section color-{{ section.settings.color_scheme | default: 'scheme-1' }}" style="{% render 'spacing-style', settings: section.settings %}">
  <div class="founder-container">
    <!-- Our Story Header -->
    <div class="story-header">
      {%- for block in section.blocks -%}
        {%- if block.type == 'section_header' -%}
          <h2 class="story-title" {{ block.shopify_attributes }}>{{ block.settings.heading }}</h2>
          {%- if block.settings.subheading != blank -%}
            <p class="story-subtitle">{{ block.settings.subheading }}</p>
          {%- endif -%}
        {%- endif -%}
      {%- endfor -%}
    </div>

    <!-- Founder Introduction -->
    <div class="founder-intro">
      <div class="founder-image">
        {%- for block in section.blocks -%}
          {%- if block.type == 'founder_image' -%}
            {% if block.settings.founder_image != blank %}
              <!-- Desktop Image -->
              <div class="founder-image-desktop" {{ block.shopify_attributes }}>
                {% render 'image', image: block.settings.founder_image %}
              </div>

              <!-- Mobile Image -->
              <div class="founder-image-mobile">
                {% if block.settings.founder_image_mobile != blank %}
                  {% render 'image', image: block.settings.founder_image_mobile %}
                {% else %}
                  <!-- Fallback to desktop image for mobile -->
                  {% render 'image', image: block.settings.founder_image %}
                {% endif %}
              </div>
            {% else %}
              <div class="founder-placeholder">
                <div class="placeholder-content">
                  <div class="placeholder-icon">üë©‚Äçüíº</div>
                  <div class="placeholder-text">
                    <strong>Founder Photo</strong><br>
                    Recommended: 800x1000px<br>
                    Professional headshot with clean background
                  </div>
                </div>
              </div>
            {% endif %}
          {%- endif -%}
        {%- endfor -%}
      </div>

      <div class="founder-info">
        {%- for block in section.blocks -%}
          {%- if block.type == 'founder_info' -%}
            <h2 class="founder-title" {{ block.shopify_attributes }}>
              {{ block.settings.founder_name }}
            </h2>
            <p class="founder-subtitle" {{ block.shopify_attributes }}>
              {{ block.settings.founder_title }}
            </p>
          {%- endif -%}
        {%- endfor -%}

        {%- for block in section.blocks -%}
          {%- if block.type == 'founder_story' -%}
            <div class="founder-story" {{ block.shopify_attributes }}>
              {{ block.settings.story }}
            </div>
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>

    <!-- Founder Quotes Carousel -->
    {%- for block in section.blocks -%}
      {%- if block.type == 'founder_quote' -%}
        <div class="founder-quotes-carousel" {{ block.shopify_attributes }}>
          <div class="quotes-container">
            <div class="quote-slide active">
              <blockquote class="founder-quote">
                <p>"{{ block.settings.quote }}"</p>
              </blockquote>
            </div>
          </div>
        </div>
      {%- endif -%}
    {%- endfor -%}

    <!-- Animated Stats -->
    {%- for block in section.blocks -%}
      {%- if block.type == 'founder_stats' -%}
        <div class="stats-section" {{ block.shopify_attributes }}>
          <div class="stats-grid">
            <div class="stat-item">
              <div
                class="stat-number"
                data-target="{{ block.settings.years_experience }}"
              >
                0
              </div>
              <div class="stat-label">Years of Experience</div>
            </div>
            <div class="stat-item">
              <div
                class="stat-number"
                data-target="{{ block.settings.happy_customers }}"
              >
                0
              </div>
              <div class="stat-label">Happy Customers</div>
            </div>
            <div class="stat-item">
              <div
                class="stat-number"
                data-target="{{ block.settings.countries_served }}"
              >
                0
              </div>
              <div class="stat-label">Countries Served</div>
            </div>
            <div class="stat-item">
              <div
                class="stat-number"
                data-target="{{ block.settings.ingredients_tested }}"
              >
                0
              </div>
              <div class="stat-label">Ingredients Tested</div>
            </div>
          </div>
        </div>
      {%- endif -%}
    {%- endfor -%}

    <!-- Company Mission -->
    {%- for block in section.blocks -%}
      {%- if block.type == 'mission' -%}
        <div class="mission-section" {{ block.shopify_attributes }}>
          {% if block.settings.title != blank %}
            <h3 class="mission-title">{{ block.settings.title }}</h3>
          {% endif %}
          {% if block.settings.description != blank %}
            <div class="mission-text">
              {{ block.settings.description }}
            </div>
          {% endif %}
        </div>
      {%- endif -%}
    {%- endfor -%}

    <!-- Journey Timeline -->
    <div class="timeline-section">
      <h3 class="timeline-title">Our Journey</h3>
      <div class="timeline">
        {%- for block in section.blocks -%}
          {%- if block.type == 'timeline_item' -%}
            <div class="timeline-item" {{ block.shopify_attributes }}>
              <div class="timeline-year">{{ block.settings.year }}</div>
              <div class="timeline-content">
                <h4>{{ block.settings.title }}</h4>
                <p>{{ block.settings.description }}</p>
              </div>
            </div>
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>

    <!-- Philosophy Section -->
    {%- for block in section.blocks -%}
      {%- if block.type == 'philosophy' -%}
        <div class="philosophy-section" {{ block.shopify_attributes }}>
          <h3 class="philosophy-title">{{ block.settings.title }}</h3>
          <div class="philosophy-content">
            {{ block.settings.description }}
          </div>
        </div>
      {%- endif -%}
    {%- endfor -%}

    <!-- Achievements -->
    {% if section.settings.achievements != blank %}
      <div class="founder-achievements">
        <h3 class="achievements-title">Key Achievements</h3>
        <div class="achievements-grid">
          {%- for block in section.blocks -%}
            {%- if block.type == 'achievement' -%}
              <div class="achievement-item" {{ block.shopify_attributes }}>
                {% if block.settings.icon != blank %}
                  <div class="achievement-icon">{{ block.settings.icon }}</div>
                {% endif %}
                <div class="achievement-content">
                  {% if block.settings.title != blank %}
                    <h4 class="achievement-title">{{ block.settings.title }}</h4>
                  {% endif %}
                  {% if block.settings.description != blank %}
                    <p class="achievement-description">{{ block.settings.description }}</p>
                  {% endif %}
                </div>
              </div>
            {%- endif -%}
          {%- endfor -%}
        </div>
      </div>
    {% endif %}
  </div>
</div>

