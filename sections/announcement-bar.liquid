{%- comment -%}
  Clean Announcement Bar Section for IS BEAUTY LUX
  Features: Glass effect, responsive design, theme integration
{%- endcomment -%}

{% if section.settings.text != blank %}
  <div class="announcement-bar">
    <div class="announcement-bar__content">
      <p class="announcement-bar__text">{{ section.settings.text }}</p>
      {% if section.settings.link != blank %}
        <a href="{{ section.settings.link }}" class="announcement-bar__link">
          {{ section.settings.link_text | default: 'Learn More' }}
        </a>
      {% endif %}
    </div>
  </div>
{% endif %}

{% schema %}
{
  "name": "Announcement Bar",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "Free shipping on orders over $50"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Link Text",
      "default": "Learn More"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color Scheme",
      "options": [
        {
          "value": "brand-porcelain",
          "label": "Brand Porcelain"
        },
        {
          "value": "classic-rose",
          "label": "Classic Rose"
        },
        {
          "value": "deep-burgundy",
          "label": "Deep Burgundy"
        },
        {
          "value": "sage-green",
          "label": "Sage Green"
        },
        {
          "value": "midnight-blue",
          "label": "Midnight Blue"
        },
        {
          "value": "warm-terracotta",
          "label": "Warm Terracotta"
        }
      ],
      "default": "brand-porcelain"
    }
  ],
  "presets": [
    {
      "name": "Announcement Bar"
    }
  ]
}
{% endschema %}
